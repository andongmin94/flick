{
  "manifest_version": 3,
  "name": "FLICK",
  "description": "youtube short formatting extension",
  "version": "0.0.1",
  "icons": {
    "16": "content/flick.png",
    "32": "content/flick.png",
    "48": "content/flick.png",
    "128": "content/flick.png",
    "256": "content/flick.png",
    "512": "content/flick.png"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.fmkorea.com/*", "http://www.fmkorea.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.fmkorea.com/*", "http://www.fmkorea.com/*"],
      "js": ["content/bundle.js"],
      "css": [
        "src/styles/base.css",
        "src/styles/layout.css",
        "src/styles/controls.css",
        "src/styles/panel.css",
        "src/styles/toolbar.css",
        "src/styles/resize.css",
        "src/styles/utility.css"
      ],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Shorts View",
    "default_popup": "content/popup.html",
    "default_icon": {
      "16": "content/flick.png",
      "24": "content/flick.png",
      "32": "content/flick.png"
    }
  },
  "options_page": "content/options.html"
}
