{
  "manifest_version": 3,
  "name": "FLICK",
  "description": "youtube short formatting extension",
  "version": "0.0.1",
  "icons": {
    "16": "public/flick.png",
    "32": "public/flick.png",
    "48": "public/flick.png",
    "128": "public/flick.png",
    "256": "public/flick.png",
    "512": "public/flick.png"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.fmkorea.com/*", "http://www.fmkorea.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.fmkorea.com/*", "http://www.fmkorea.com/*"],
      "js": [
        "content/bundle.js"
      ],
      "css": ["content/shorts.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Shorts View",
    "default_popup": "public/popup.html",
    "default_icon": {
      "16": "public/flick.png",
      "24": "public/flick.png",
      "32": "public/flick.png"
    }
  },
  "options_page": "public/options.html"
}
