{
  "manifest_version": 3,
  "name": "FLICK",
  "description": "youtube short formatting chrome extension",
  "version": "0.1.0",
  "permissions": ["storage", "scripting"],
  "host_permissions": [
    "https://www.fmkorea.com/*",
    "http://www.fmkorea.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.fmkorea.com/*", "http://www.fmkorea.com/*"],
      "js": [
        "content/s2s_sites.js",
        "content/s2s_extract.js",
        "content/s2s_ui.js",
        "content/shortsize.js"
      ],
      "css": ["content/shorts.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Shorts View",
    "default_popup": "popup/popup.html"
  },
  "options_page": "options/options.html"
}
