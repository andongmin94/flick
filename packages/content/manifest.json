{
  "manifest_version": 3,
  "name": "FLICK",
  "description": "youtube short formatting extension",
  "version": "0.0.1",
  "icons": {
    "16": "flick.png",
    "32": "flick.png",
    "48": "flick.png",
    "128": "flick.png",
    "256": "flick.png",
    "512": "flick.png"
  },
  "permissions": ["storage", "scripting"],
  "host_permissions": ["https://www.fmkorea.com/*", "http://www.fmkorea.com/*"],
  "content_scripts": [
    {
      "matches": ["https://www.fmkorea.com/*", "http://www.fmkorea.com/*"],
      "js": ["bundle.js"],
      "css": ["bundle.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "Shorts View",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "flick.png",
      "24": "flick.png",
      "32": "flick.png"
    }
  },
  "options_page": "options.html"
}
