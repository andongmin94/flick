{
  "manifest_version": 3,
  "name": "FLICK",
  "description": "커뮤니티 게시글을 유튜브 쇼츠 포맷에 맞게 바꾸어주어 쇼츠 생성을 용이하게 해주는 확장 프로그램",
  "version": "0.0.2",
  "icons": {
    "16": "icon.png",
    "32": "icon.png",
    "48": "icon.png",
    "128": "icon.png",
    "256": "icon.png",
    "512": "icon.png"
  },
  "permissions": [],
  "host_permissions": [],
  "content_scripts": [
    {
      "matches": [
        "*://*.fmkorea.com/*",
        "*://gall.dcinside.com/*",
        "*://m.dcinside.com/*",
        "*://cafe.naver.com/*",
        "*://*.dogdrip.net/*"
      ],
      "js": ["bundle.js"],
      "css": ["bundle.css"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_title": "FLICK",
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "24": "icon.png",
      "32": "icon.png"
    }
  },
  "options_page": "options.html"
}
